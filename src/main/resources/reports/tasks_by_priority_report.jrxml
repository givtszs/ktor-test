<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports
                                  http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="tasks_by_priority_report" pageWidth="595" pageHeight="842"
              columnWidth="555" leftMargin="20" rightMargin="20" topMargin="20" bottomMargin="20">

    <style name="PriorityBackground" mode="Opaque">
        <conditionalStyle>
            <conditionExpression><![CDATA[$P{PRIORITY_FILTER}.equals("Vital")]]></conditionExpression>
            <style backcolor="#FFE6E6"/>
        </conditionalStyle>
        <conditionalStyle>
            <conditionExpression><![CDATA[$P{PRIORITY_FILTER}.equals("High")]]></conditionExpression>
            <style backcolor="#FFE6CC"/>
        </conditionalStyle>
        <conditionalStyle>
            <conditionExpression><![CDATA[$P{PRIORITY_FILTER}.equals("Medium")]]></conditionExpression>
            <style backcolor="#FFFFCC"/>
        </conditionalStyle>
        <conditionalStyle>
            <conditionExpression><![CDATA[$P{PRIORITY_FILTER}.equals("Low")]]></conditionExpression>
            <style backcolor="#E6FFE6"/>
        </conditionalStyle>
    </style>

    <parameter name="PRIORITY_FILTER" class="java.lang.String"/>
    <parameter name="REPORT_TITLE" class="java.lang.String"/>
    <parameter name="GENERATED_DATE" class="java.lang.String"/>
    <parameter name="TOTAL_TASKS" class="java.lang.Integer"/>

    <field name="name" class="java.lang.String"/>
    <field name="description" class="java.lang.String"/>
    <field name="priority" class="java.lang.String"/>
    <field name="priorityLevel" class="java.lang.Integer"/>

    <title>
        <band height="60">
            <textField>
                <reportElement x="0" y="0" width="555" height="30" style="PriorityBackground"/>
                <textElement>
                    <font size="16" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{REPORT_TITLE}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="0" y="30" width="555" height="20"/>
                <textElement/>
                <textFieldExpression><![CDATA["Report for tasks with priority: " + $P{PRIORITY_FILTER} + " - Generated on: " + $P{GENERATED_DATE}]]></textFieldExpression>
            </textField>
        </band>
    </title>

    <columnHeader>
        <band height="20">
            <staticText>
                <reportElement x="0" y="0" width="100" height="20" style="PriorityBackground"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[Task Name]]></text>
            </staticText>
            <staticText>
                <reportElement x="100" y="0" width="300" height="20" style="PriorityBackground"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[Description]]></text>
            </staticText>
            <staticText>
                <reportElement x="400" y="0" width="100" height="20" style="PriorityBackground"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[Priority]]></text>
            </staticText>
        </band>
    </columnHeader>

    <detail>
        <band height="20">
            <textField>
                <reportElement x="0" y="0" width="100" height="20"/>
                <textFieldExpression><![CDATA[$F{name}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="100" y="0" width="300" height="20"/>
                <textFieldExpression><![CDATA[$F{description}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="400" y="0" width="100" height="20"/>
                <textFieldExpression><![CDATA[$F{priority}]]></textFieldExpression>
            </textField>
        </band>
    </detail>

</jasperReport>